
    <h2 class="items-sell-title">情報を入力</h2>
    <%= form_with(model: @journal, local: true) do |f| %>

      <%# 画像 %>
      <div class="img-upload">
        <div class="weight-bold-text">
          画像
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :image, id:"journal-image" %>
        </div>
      </div>
      <%# /画像 %>
      <%# タイトル %>
      <div class="new-journals">
        <div class="weight-bold-text">
          タイトル
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :title, class:"items-text", id:"journal-name", placeholder:"タイトル（必須 40文字まで)", maxlength:"40" %>
        <div class="journals-explain">
          <div class="weight-bold-text">
            コメント
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :comment, class:"journal-text", id:"journal-info", placeholder:"コメント（必須 1,000文字まで）(例）ずっと行きたかった沖縄旅行！" ,rows:"7" ,maxlength:"1000" %>
        </div>
      </div>
      <%# /タイトル %>

      <%# 日程 %>
      <div class='form-text-wrap'>
        <label class="form-text">出発日</label>
        <span class="indispensable">必須</span>
      </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :departure_date,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
      </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :last_date,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
      <%# /日程 %>

      <%# 下部ボタン %>
      <div class="sell-btn-contents">
        <%= f.submit "投稿する" ,class:"sell-btn" %>
        <%=link_to 'もどる', root_path, class:"back-btn" %>
      </div>
      <%# /下部ボタン %>
    <% end %>