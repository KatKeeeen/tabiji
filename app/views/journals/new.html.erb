<%= render "shared/header" %>

  <div class="journal-post-contents">

    <div class='journal-form-wrap'>
    
      <%= form_with model: @journal_journal_prefecture, url: journals_path, local: true do |f| %>

        <div class='form-header'>
          <h1 class='form-header-text'>
            旅情報を入力
          </h1>
        </div>

        <div class="journal-form-group">

          <%# 画像 %>
          <div class="img-upload">
            <div class="weight-bold-text">
              画像
              <span class="indispensable">必須</span>
            </div>
            <div class="click-upload">
              <p>
                クリックしてファイルをアップロード
              </p>
              <%= f.file_field :image, class:"journals-image-file", id:"journal-image" %>
            </div>
          </div>
          <%# /画像 %>

          <%# タイトル %>
          <div class="new-journal">
            <div class="weight-bold-text">
              タイトル
              <span class="indispensable">必須</span>
            </div>
            <%= f.text_area :title, class:"journal-text", id:"journal-name", placeholder:"タイトル（必須 40文字まで)", maxlength:"40" %>
            <div class="journal-explain">
              <div class="weight-bold-text">
                コメント
                <span class="indispensable">必須</span>
              </div>
              <%= f.text_area :comment, class:"journal-text", id:"journal-info", placeholder:"コメント（必須 1,000文字まで）(例）ずっと行きたかった沖縄旅行！" ,rows:"7" ,maxlength:"1000" %>
            </div>
          </div>
          <%# /タイトル %>

          <%# 日程 %>
          <div class='weight-bold-text'>
            <label class="form-text">出発日</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-piriod-wrap'>
            <%= raw sprintf(
                        f.date_select(
                          :departure_date,
                          class:'select-departure-date',
                          id:"departure-date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: (Time.now.year),
                          end_year: (Time.now.year + 1),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
          <div class='weight-bold-text'>
            <label class="form-text">最終日</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-piriod-wrap'>
            <%= raw sprintf(
                        f.date_select(
                          :last_date,
                          class:'select-last-date',
                          id:"last-date",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: (Time.now.year),
                          end_year: (Time.now.year + 1 ),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
          <%# /日程 %>

          <%# 地域%>
          <div class="prefecture-select">
            <div class="weight-bold-text">
                都道府県
              <span class="indispensable">必須</span>
            </div>
          
            <%= f.label :prefecture %>
            <%= f.collection_check_boxes(:prefecture_ids, Prefecture.all, :id, :name, include_hidden: false) do |prefecture| %> 
              <%= prefecture.label do %>
                <%= prefecture.check_box %>
                <%= prefecture.text %>
              <% end %>
            <% end %>
          </div>
          <%# 地域%>

        </div>

        <%# 下部ボタン %>
        <div class="journal-btn-contents">
          <%= f.submit "作成する" ,class:"journal-create-btn" %>
          <%=link_to 'トップページ', root_path, class:"top-back-btn" %>
        </div>
        <%# /下部ボタン %>

      <% end %>

    </div>


  </div>

<%= render "shared/footer" %>