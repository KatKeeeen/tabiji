<%= render "shared/header" %>

<div class='main-contents'>

  <div class='top-contents'>

    <%= link_to journal_events_path(@journals.first.id), class:"journal-content" do %>
      <%= image_tag @journals.first.image, class: "journal-first-img"%>
    <% end %>

    <%if @journals.present? %>
      <div class='post-btn'>
        <%= link_to(prefectures_path, class: 'prefecture-search-btn', data: {"turbolinks" => false}) do %>
          <span>行った場所で検索</span>
        <% end %>

        <%= link_to(new_journal_path, class: 'journal-post-btn') do %>
          <span>旅記録を作成する</span>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# 投稿一覧 %>
    <div class='journal-contents'>
      <%if @journals[1..-1].present? %>

        <div class='journal-lists'>
          <% @journals[1..-1].each do |journal| %>
            <div class='journal-list'>
              <%= link_to journal_events_path(journal.id), class:"journal-content" do %>
                <div class='journal-img-content'>
                  <%= image_tag journal.image, class: "journal-img" %>
                </div>
                <div class='journal-info'>
                  <div class='journal-title'>
                    <%= journal.title %>
                  </div>
                  <div class='journal-period'>
                    <%= journal.departure_date.strftime("%Y年%-m月%-d日") %> 〜 <%= journal.last_date.strftime("%Y年%-m月%-d日") %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
          
      <% else %>
          <div class='journal-first-info'>
            <div class='journal-post-info'>
              あなたの旅を記録しよう！
            </div>
            <div class='first-post-btn'>
              <%= link_to(new_journal_path, class: 'journal-post-btn') do %>
                <span>旅記録を作成する</span>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  <%# /投稿一覧 %>

</div>

<%= render "shared/footer" %>