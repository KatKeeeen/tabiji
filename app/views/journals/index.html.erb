<%= render "shared/header" %>

<div class='main-contents'>

  <%if @journals.present? %>
    <div class='post-btn'>
      <%= link_to(prefectures_path, class: 'prefecture-sarch-btn') do %>
        <span>行った場所で検索</span>
      <% end %>

      <%= link_to(new_journal_path, class: 'journal-post-btn') do %>
        <span>旅記録を作成する</span>
      <% end %>
    </div>
  <% end %>

  <%# 投稿一覧 %>
    <div class='journal-contents'>
      <div class='journal-content-head'>
        <div class="subtitle" >
          旅記録一覧
        </div>
      </div>

      <ul class='journal-lists'>
        <%if @journals.present? %>
          <% @journals.each do |journal| %>
            <li class='journal-list'>
              <%= link_to journal_events_path(journal.id), class:"journal-content" do %>
                <div class='journal-img-content'>
                  <%= image_tag journal.image, class: "journal-img" %>
                </div>
                <div class='journal-info'>
                  <h3 class='journal-title'>
                    <%= journal.title %>
                  </h3>
                  <div class='journal-period'>
                    <span><%= journal.departure_date.strftime("%Y年%-m月%-d日") %> 〜 <%= journal.last_date.strftime("%Y年%-m月%-d日") %></span>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
          
        <% else %>
            <div class='journal-info'>
              <h3 class='journal-post-info'>
                あなたの旅を記録しよう！
              </h3>
              <div class='post-btn'>
                <%= link_to(new_journal_path, class: 'journal-post-btn') do %>
                  <span>旅記録を作成する</span>
                <% end %>
              </div>
            </div>
        <% end %>
      </ul>
    </div>
  <%# /投稿一覧 %>

</div>

<%= render "shared/footer" %>